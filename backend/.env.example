# Database
DATABASE_URL=postgresql+asyncpg://robot_user:robot_password@localhost:5433/network_school_robot

# Robot Configuration
ROBOT_CONNECTION_MODE=simulation    # auto, localhost_only, network, simulation
ROBOT_HOST=reachy-mini.local
ROBOT_AUTO_CONNECT=false
ROBOT_AUTO_EXECUTE_ACTIONS=true
ROBOT_VOICE_ENABLED=true

# API Keys (Required)
OPENAI_API_KEY=your_openai_api_key
DEEPGRAM_API_KEY=your_deepgram_api_key

# API Keys (Optional)
ANTHROPIC_API_KEY=your_anthropic_api_key
ELEVENLABS_API_KEY=your_elevenlabs_api_key
GEMINI_API_KEY=your_gemini_api_key
TOGETHER_AI_API_KEY=your_together_ai_api_key

# AWS S3 Storage (Optional - for photo/video storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_bucket_name

# Convex Backend (Optional - for message persistence)
CONVEX_URL=your_convex_deployment_url

# Personality System
DEFAULT_PERSONALITY=tars    # tars, samantha, jarvis, coach, teacher, friend, expert, therapist

# Voice Control
VOICE_CONTROL_ENABLED=true
VOICE_CONTROL_AUTO_START=false
VOICE_CONTROL_WAKE_WORDS=hey claude,claude code,claude
VOICE_CONTROL_LISTENING_TIMEOUT=10.0
VOICE_CONTROL_STT_MODEL=nova-2
VOICE_CONTROL_TTS_VOICE=aura-asteria-en

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
